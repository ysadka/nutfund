<h2>Create a Campaign</h2>

<%= simple_form_for @campaign do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :action, :required => true, :autofocus => true %>
    <%= f.input :charity, :required => true %>
    <%= f.input :action_description, :required => true, as: :text %>
    <%= f.input :charity_description, :required => true, as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Campaign" %>
  </div>
<% end %>
